package banking;

public class ChargeCard {
	Long cardNumber;
	Integer cardPin;
	Double creditLimit;
	Account cardAccount;
	
//---CONSTRUCTORS---//
	
	//--NEW CARD--//
	
	/***
	 * @author Leon Wilson
	 */
	public ChargeCard(Integer pin, Account account) {
		this.cardNumber = 1111222233334444L;//Assign a card number
		this.cardPin = pin;
		this.creditLimit = 500.00D;
		this.cardAccount = account;
	}
	
	//--EXISTING CARD--//
	
	/***
	 * @author Leon Wilson
	 */
	public ChargeCard(Long cardNumber, Integer pin, Double limit, Account account) {
		this.cardNumber = cardNumber;
		this.cardPin = pin;
		this.creditLimit = limit;
		this.cardAccount = account;
	}

//---FUNCTIONS---//
	
	/***
	 * @author Leon Wilson
	 */
	public void debitPurchase(Integer pin, Transaction trans) {
		
	}
	
	/***
	 * @author Leon Wilson
	 */
	public void creditPurchase(Transaction trans) {
		
	}
	
	//--GETTERS/SETTERS--//
}
